{
  "compilerOptions": {
    "lib": [
      "es2017"
    ],
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "sourceMap": true,
    "target": "es2017",
    "module": "es6",
    "outDir": "lib",
    "baseUrl": "./src/",
    "types": ["mocha"],
    "paths": {
      "@backend/*": [
        "*"
      ]
    },
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
 "exclude": [
      "node_modules"
    ]
}
