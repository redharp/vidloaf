{
  "compilerOptions": {
    "lib": [
      "es2017"
    ],
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "sourceMap": true,
    "target": "es2017",
    "module": "es6",
    "outDir": "lib",
    "baseUrl": "./src/",
    "paths": {
      "@backend/*": [
        "*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
 "exclude": [
      "node_modules"
    ]
}
