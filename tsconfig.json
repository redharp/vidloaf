{
    "compilerOptions": {
      "lib": [
        "es2017"
      ],
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "sourceMap": true,
      "target": "es2017",
      "module": "es6",
      "outDir": "lib",
      "baseUrl": "./",
      "paths": {
        "@backend/*": ["backend/src/*"],
        "@web/*": ["web/src/*"],
        "@logger/*": ["logger/src/*"]
      }
    },
    "include": [
      "packages/*/src/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }
