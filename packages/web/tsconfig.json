{
    "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap":  true,
      "noImplicitAny": false,
      "module": "es6",
      "target": "es5",
      "esModuleInterop": true,
      "jsx": "react",
      "allowJs": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "baseUrl": "./src/",
      "skipLibCheck": true,
      "paths": {
        "@backend/*": [
          "../../backend/src/*"
        ]
      }
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }